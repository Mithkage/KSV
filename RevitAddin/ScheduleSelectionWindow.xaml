<Window x:Class="RTS_Schedules.ScheduleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select RTS Schedules" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="ToolWindow"
        Background="#F0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Select Schedules to Process:" FontWeight="Bold" FontSize="14" Margin="10" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,10,10" Grid.Row="1">
            <Button Content="Create All" Width="100" Height="30" Margin="5" Click="CreateAll_Click"/>
            <Button Content="Remove All" Width="100" Height="30" Margin="5" Click="RemoveAll_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,0,10,10" Grid.Row="2">
            <StackPanel x:Name="SchedulesPanel" Margin="5">
            </StackPanel>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Row="3">
            <Button Content="Generate Selected" Width="120" Height="30" Margin="5" Click="Generate_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>