<Window x:Class="RTS.UI.RoutingReportProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="Routing Report Progress"
        Height="350" Width="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="True" 
        Topmost="True"
        Background="#F5F5F5"
        ResizeMode="CanMinimize" 
        WindowStyle="SingleBorderWindow"
        FontFamily="Segoe UI"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF26A69A"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#FF4DB6AC"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#FF00897B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#FFBDBDBD"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Overall Process Step -->
        <TextBlock Grid.Row="0" x:Name="ProcessStepText" Text="Initializing..." FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,5"/>

        <!-- Progress Bar with Percentage -->
        <Grid Grid.Row="1" Margin="0,5,0,5">
            <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Height="28" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"/>
            <TextBlock x:Name="ProgressPercentageText" Text="0%" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Task Description -->
        <TextBlock Grid.Row="2" x:Name="TaskDescriptionText" Text="Preparing..." FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" FontStyle="Italic" Margin="0,5,0,10"/>

        <!-- Cable Info Section -->
        <GroupBox Grid.Row="3" x:Name="CableDetailsGroup" Header="Current Cable Details" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Padding="15" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Labels -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Cable Reference:" FontWeight="SemiBold" FontSize="13" Margin="0,0,10,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="From:" FontWeight="SemiBold" FontSize="13" Margin="0,0,10,10" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="To:" FontWeight="SemiBold" FontSize="13" Margin="0,0,10,0" Foreground="{StaticResource TextPrimaryBrush}"/>

                    <!-- Data -->
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CableReferenceText" Text="-" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FromText" Text="-" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ToText" Text="-" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis"/>

                    <!-- Error Message Area -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="ErrorText" Text="" FontSize="12" Margin="0,10,0,0" Foreground="{StaticResource ErrorBrush}" FontStyle="Italic" TextWrapping="Wrap"/>
                </Grid>
            </Border>
        </GroupBox>

        <!-- Cancel Button -->
        <Button Grid.Row="4" x:Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CancelButton_Click" Margin="0,15,0,0" Width="100"/>
    </Grid>
</Window>
