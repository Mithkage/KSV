<Window x:Class="RTS.UI.RoutingReportProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Routing Report Progress"
        Height="362" Width="636"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#FFE0F2F1"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF26A69A"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DB6AC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00897B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15,15,15,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="Auto" MinHeight="10"/>
        </Grid.RowDefinitions>

        <!-- Route Progress -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock FontWeight="Bold" Text="Route 1 of 10:" FontSize="14" HorizontalAlignment="Left"/>
            <TextBlock x:Name="RouteProgressText" Text="[RouteName]" FontSize="13" Foreground="Gray" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" x:Name="ProgressBar" Minimum="0" Maximum="100" Height="25"/>

        <!-- Task Description -->
        <TextBlock Grid.Row="2" x:Name="TaskDescriptionText" Text="Processing route geometry..." FontSize="12" Margin="0,10,0,0" HorizontalAlignment="Left" FontStyle="Italic"/>

        <!-- Cable Info Section -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,10,0,10">
            <!-- Cable Reference -->
            <TextBlock FontWeight="Bold" Text="Cable Reference:" FontSize="13" Margin="0,0,0,0"/>
            <TextBlock x:Name="CableReferenceText" Text="[CableReference]" FontSize="13" Foreground="Gray" Margin="0,0,0,10"/>

            <!-- From Device -->
            <TextBlock FontWeight="Bold" Text="From:" FontSize="13" Margin="0,0,0,0"/>
            <TextBlock x:Name="FromText" Text="[FromDevice]" FontSize="13" Foreground="Gray" Margin="0,0,0,10"/>

            <!-- To Device -->
            <TextBlock FontWeight="Bold" Text="To:" FontSize="13" Margin="0,0,0,0"/>
            <TextBlock x:Name="ToText" Text="[ToDevice]" FontSize="13" Foreground="Gray" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock Grid.Row="4" x:Name="ErrorText" Text="" FontSize="12" Margin="0,5,0,0" Foreground="Red" HorizontalAlignment="Left" FontStyle="Italic"/>

        <!-- Cancel Button -->
        <Button Grid.Row="5" x:Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Click="CancelButton_Click" Margin="0,4,0,0" Width="80"/>

        <!-- This is the blank row - nothing is placed in Grid.Row="6" -->
    </Grid>
</Window>