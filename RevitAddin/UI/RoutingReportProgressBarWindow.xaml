<Window x:Class="RTS.UI.RoutingReportProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Routing Report Progress"
        Height="220" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#FFE0F2F1"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF26A69A"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DB6AC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00897B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- NEW: For Cable Info -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Route Progress -->
        <TextBlock Grid.Row="0" x:Name="RouteProgressText" Text="Route 1 of 10: [RouteName]" FontSize="14" Margin="0,0,0,10" HorizontalAlignment="Left"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" x:Name="ProgressBar" Minimum="0" Maximum="100" Height="25"/>

        <!-- Task Description -->
        <TextBlock Grid.Row="2" x:Name="TaskDescriptionText" Text="Processing route geometry..." FontSize="12" Margin="0,10,0,0" HorizontalAlignment="Left" FontStyle="Italic"/>

        <!-- Cable Info Section -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,10,0,10">
            <TextBlock x:Name="CableReferenceText" FontSize="13" FontWeight="Bold" Text="Cable Reference: [CableReference]" />
            <TextBlock FontSize="11" Foreground="Gray" Text="Unique identifier for the cable being routed." Margin="0,0,0,5"/>
            <TextBlock x:Name="FromText" FontSize="13" FontWeight="Bold" Text="From: [FromDevice]" />
            <TextBlock FontSize="11" Foreground="Gray" Text="Origin device or location for this cable." Margin="0,0,0,5"/>
            <TextBlock x:Name="ToText" FontSize="13" FontWeight="Bold" Text="To: [ToDevice]" />
            <TextBlock FontSize="11" Foreground="Gray" Text="Destination device or location for this cable." Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock Grid.Row="4" x:Name="ErrorText" Text="" FontSize="12" Margin="0,5,0,0" Foreground="Red" HorizontalAlignment="Left" FontStyle="Italic"/>

        <!-- Cancel Button -->
        <Button Grid.Row="5" x:Name="CancelButton" Content="Cancel" Style="{StaticResource ModernButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CancelButton_Click"/>
    </Grid>
</Window>