<Window x:Class="RTS.UI.InitiateParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RTS - Initiate Shared Parameters" Height="Auto" Width="480"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#FFE0F2F1"
        SizeToContent="Height"
        ResizeMode="NoResize">

    <!-- Resource Dictionary for Styles -->
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF26A69A"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF616161" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DB6AC"/>
                    <Setter Property="BorderBrush" Value="#FF00897B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00897B"/>
                    <Setter Property="BorderBrush" Value="#FF00695C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                    <Setter Property="Foreground" Value="#FF757575"/>
                    <Setter Property="BorderBrush" Value="#FF9E9E9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Separator">
            <Setter Property="Margin" Value="0,10"/>
        </Style>
    </Window.Resources>

    <!-- Main Layout Grid -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Parameters to Initiate"
                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"
                   HorizontalAlignment="Center" Foreground="#FF333333" TextWrapping="Wrap" TextAlignment="Center"/>

        <!-- Parameter Selection Checkboxes -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Project Setup:" FontWeight="Bold" Foreground="#FF00796B"/>
            <CheckBox x:Name="InitiateAllParamsCheckBox" Content="Initiate All Shared Parameters in Project" IsChecked="True"/>
            <CheckBox x:Name="MapCablesCheckBox" Content="Initiate Parameters for Cable Mapping" IsChecked="True"/>

            <!-- Schedule Parameters Section with Sub-options -->
            <CheckBox x:Name="SchedulesCheckBox" Content="Initiate Parameters for Standard Schedules" IsChecked="True" Click="SchedulesCheckBox_Click"/>
            <StackPanel Margin="20,0,0,0">
                <CheckBox x:Name="ScheduleDetailItemsCheckBox" Content="Detail Items Schedule" IsChecked="{Binding IsChecked, ElementName=SchedulesCheckBox}"/>
                <CheckBox x:Name="ScheduleElecEquipCheckBox" Content="Electrical Equipment Schedule" IsChecked="{Binding IsChecked, ElementName=SchedulesCheckBox}"/>
                <CheckBox x:Name="ScheduleLightingCheckBox" Content="Lighting Fixtures Schedule" IsChecked="{Binding IsChecked, ElementName=SchedulesCheckBox}"/>
                <CheckBox x:Name="ScheduleElecFixturesCheckBox" Content="Electrical Fixtures Schedule" IsChecked="{Binding IsChecked, ElementName=SchedulesCheckBox}"/>
                <CheckBox x:Name="ScheduleCableTraysCheckBox" Content="Cable Trays &amp; Conduits Schedule" IsChecked="{Binding IsChecked, ElementName=SchedulesCheckBox}"/>
            </StackPanel>

            <Separator/>

            <TextBlock Text="Family Setup (Only available in Family Editor):" FontWeight="Bold" Foreground="#FF00796B"/>
            <CheckBox x:Name="AddRtsTypeFamilyCheckBox" Content="Add 'RTS_Type' to current Family" IsEnabled="False"/>
            <CheckBox x:Name="CopyRelativeCheckBox" Content="Initiate Parameters for Copy Relative" IsEnabled="False"/>
        </StackPanel>

        <!-- Action Buttons at the bottom -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Initiate" x:Name="InitiateButton" Click="InitiateButton_Click" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" Width="90"/>
            <Button Content="Close" x:Name="CloseButton" IsCancel="True" Style="{StaticResource ModernButtonStyle}" Width="70"/>
        </StackPanel>
    </Grid>
</Window>
