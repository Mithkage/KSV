<!--
    File: ProfileSettingsWindow.xaml (Updated)
    Description: Defines the UI for the Profile Settings window. Users can map model
                 element categories (like Grids, Walls, etc.) to specific Revit links,
                 now grouped by discipline.
-->
<Window x:Class="RTS.UI.ProfileSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTS.UI"
        mc:Ignorable="d"
        Title="Profile Settings" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="True"
        Topmost="True"
        Background="#FFE0F2F1"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF26A69A"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DB6AC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00897B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Control for Model and Annotation Categories -->
        <TabControl Grid.Row="0">
            <TabItem Header="Model Categories">
                <DataGrid ItemsSource="{Binding ModelCategoryMappingsView}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserResizeColumns="True"
                          Margin="0,10,0,0"
                          Height="450">
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander IsExpanded="True" Background="#FFB2DFDB" BorderBrush="#FF4DB6AC" BorderThickness="0,0,0,1">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,0"/>
                                                            <TextBlock Text="Set all in group to:" Margin="20,0,5,0" VerticalAlignment="Center"/>
                                                            <ComboBox ItemsSource="{Binding DataContext.AvailableLinks, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      SelectedItem="{Binding Items[0].GroupLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                      Width="250"/>
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter />
                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Group Category" Binding="{Binding Discipline}" IsReadOnly="True" Width="2*"/>
                        <DataGridTextColumn Header="Model Category" Binding="{Binding CategoryName}" IsReadOnly="True" Width="2*"/>
                        <DataGridTemplateColumn Header="Source Link" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.AvailableLinks, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding SelectedLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Annotation Categories">
                <DataGrid ItemsSource="{Binding AnnotationCategoryMappingsView}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserResizeColumns="True" Margin="0,10,0,0">
                    <DataGrid.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander IsExpanded="True" Background="#FFB2DFDB" BorderBrush="#FF4DB6AC" BorderThickness="0,0,0,1">
                                                    <Expander.Header>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,0"/>
                                                            <TextBlock Text="Set all in group to:" Margin="20,0,5,0" VerticalAlignment="Center"/>
                                                            <ComboBox ItemsSource="{Binding DataContext.AvailableLinks, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      SelectedItem="{Binding Items[0].GroupLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                      Width="250"/>
                                                        </StackPanel>
                                                    </Expander.Header>
                                                    <ItemsPresenter />
                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </DataGrid.GroupStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Group Category" Binding="{Binding Discipline}" IsReadOnly="True" Width="2*"/>
                        <DataGridTextColumn Header="Annotation Category" Binding="{Binding CategoryName}" IsReadOnly="True" Width="2*"/>
                        <DataGridTemplateColumn Header="Source Link" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.AvailableLinks, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding SelectedLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Coordinate Systems">
                <DataGrid ItemsSource="{Binding Settings.CoordinateSystemMappings}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserResizeColumns="True" Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Coordinate System" Binding="{Binding SystemName}" IsReadOnly="True" Width="2*"/>
                        <DataGridTemplateColumn Header="Source Link" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.AvailableLinks, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding SelectedLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" IsDefault="True" Click="SaveButton_Click" Width="80"/>
            <Button Content="Cancel" Style="{StaticResource ModernButtonStyle}" Margin="0,0,0,0" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
