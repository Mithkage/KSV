<Window x:Class="PC_Extensible.PC_Extensible_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PowerCAD Data Manager" Height="330" Width="380" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#FFE0F2F1">

    <!-- Applying the modern button style from your RTS Reports example -->
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF26A69A"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF616161" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4DB6AC"/>
                    <Setter Property="BorderBrush" Value="#FF00897B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF00897B"/>
                    <Setter Property="BorderBrush" Value="#FF00695C"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF616161" Direction="270" ShadowDepth="1" BlurRadius="2" Opacity="0.6" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select an operation for the cable data:"
                   FontSize="15" FontWeight="SemiBold" Margin="0,0,0,20"
                   HorizontalAlignment="Center" Foreground="#FF333333"/>

        <!-- Main action buttons -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Import My PowerCAD Data..."
                    Name="ImportMyDataButton"
                    Click="ImportMyDataButton_Click"
                    Width="300" Height="40" Margin="0,5"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button Content="Import Consultant PowerCAD Data..."
                    Name="ImportConsultantDataButton"
                    Click="ImportConsultantDataButton_Click"
                    Width="300" Height="40" Margin="0,5"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button Content="Clear Existing Data..."
                    Name="ClearDataButton"
                    Click="ClearDataButton_Click"
                    Width="300" Height="40" Margin="0,5"
                    Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <!-- Cancel button at the bottom -->
        <!-- CORRECTED: Removed the redundant Style="..." attribute -->
        <Button Grid.Row="2" Content="Cancel"
                Name="CancelButton"
                IsCancel="True"
                Click="CancelButton_Click"
                Width="120" Height="35" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                    <Setter Property="Background" Value="#FFBDBDBD"/>
                    <Setter Property="BorderBrush" Value="#FF616161"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF9E9E9E"/>
                            <Setter Property="BorderBrush" Value="#FF424242"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF757575"/>
                            <Setter Property="BorderBrush" Value="#FF424242"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
