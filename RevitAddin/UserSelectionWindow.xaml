<Window x:Class="RTS_MapCables.UserSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RTS_MapCables" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#FF80CBC4">
	<Grid Margin="10">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock Text="Do you need to generate a CSV template file?" Margin="10"
                       Foreground="#FF333333" FontWeight="Bold"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Yes" Width="75" Margin="5" Click="YesButton_Click"
                        Background="#FFCC0000" Foreground="White" BorderThickness="0"/>
				<Button Content="No" Width="75" Margin="5" Click="NoButton_Click"
                        Background="#FFE0E0E0" Foreground="#FF333333" BorderThickness="1" BorderBrush="#FF333333"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>