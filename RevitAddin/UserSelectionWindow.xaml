<Window x:Class="RTS_MapCables.UserSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RTS_MapCables" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Do you need to generate a CSV template file?" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Width="75" Margin="5" Click="YesButton_Click"/>
                <Button Content="No" Width="75" Margin="5" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>